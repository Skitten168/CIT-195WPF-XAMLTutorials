        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ListBox"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="800">
    <Window.Resources>
        <ItemsPanelTemplate x:Key="ListBoxItemsPanel1">
            <WrapPanel/>
        </ItemsPanelTemplate>
    </Window.Resources>
    <Grid Margin="0,0,0,-497">
        <ListBox ItemsPanel="{DynamicResource ListBoxItemsPanel1}" Margin="197,116,312,396" ScrollViewer.HorizontalScrollBarVisibility="Disabled" >
            <ListBoxItem Background="#FFD7BCB7" Height="100" Width="175"/>
            <ListBoxItem Background="#FF61C52E" Height="100" Width="175"/>
            <ListBoxItem Background="#FFDD18D1" Height="100" Width="175"/>
            <ListBoxItem Background="#FF70824B" Height="100" Width="175"/>
            <ListBoxItem Background="#FF7E06FF" Height="100" Width="175"/>
            <ListBoxItem Background="#FF2AA48E" Height="100" Width="175"/>


        </ListBox>

    </Grid>
</Window>